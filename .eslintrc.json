{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": "off",
        // Estas dos lineas las he puesto yo para que no de guerra con el trailling spaces y el one expression per line
        "no-trailing-spaces":"warn",
        "react/jsx-one-expression-per-line":0
    }
}
